                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="accordion" id="appointmentAccordion">
                  <!-- Day Selection Accordion -->
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="headingDay">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseDay" aria-expanded="false" aria-controls="collapseDay">
                        Choose a Day
                      </button>
                    </h2>
                    <div id="collapseDay" class="accordion-collapse collapse" aria-labelledby="headingDay" data-bs-parent="#appointmentAccordion">
                      <div class="accordion-body">
                        <div class="d-flex flex-wrap gap-3">
                          <button class="btn btn-outline-primary fixed-button-size">Monday, March 18th</button>
                          <button class="btn btn-outline-primary fixed-button-size">Tuesday, March 19th</button>
                          <button class="btn btn-outline-primary fixed-button-size">Wednesday, March 20th</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Time Slot Selection Accordion -->
                  <div class="accordion-item mt-3">
                    <h2 class="accordion-header" id="headingTime">
                      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTime" aria-expanded="false" aria-controls="collapseTime">
                        Choose a Time Slot
                      </button>
                    </h2>
                    <div id="collapseTime" class="accordion-collapse collapse" aria-labelledby="headingTime" data-bs-parent="#appointmentAccordion">
                      <div class="accordion-body">
                        <div class="d-flex flex-wrap gap-3">
                          <button class="btn btn-outline-info fixed-button-size">10:00 AM</button>
                          <button class="btn btn-outline-info fixed-button-size">11:00 AM</button>
                          <button class="btn btn-outline-info fixed-button-size">1:00 PM</button>
                          <button class="btn btn-outline-info fixed-button-size">3:00 PM</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-success w-100 btn-book">Confirm Appointment</button>
              </div>
            </div>
          </div>
        </div>
